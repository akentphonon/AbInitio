def portlet(app):
    portlet = opal.content.portlet(title="Electrons", id="portlet-electrons")

    electronsnew = portlet.item(description="New Simulation")
    electronsnew.target = action_href(action('electronsnew', 'Greet'), app.cgihome)
    electronsnew.icon = "images/linkicon.png"
    electronsnew.type = "navItem"

    electronsedit = portlet.item(description="Edit Simulation")
    electronsedit.target = action_href(action('electronsedit', 'Greet'), app.cgihome)
    electronsedit.icon = "images/linkicon.png"
    electronsedit.type = "navItem"

    electronsjobs = portlet.item(description="Jobs")
    electronsjobs.target = action_href(action('electronsjobs', 'Greet'), app.cgihome)
    electronsjobs.icon = "images/linkicon.png"
    electronsjobs.type = "navItem"

    electronsdos = portlet.item(description="Electron DOS")
    electronsdos.target = action_href(action('electronsdos', 'Greet'), app.cgihome)
    electronsdos.icon = "images/linkicon.png"
    electronsdos.type = "navItem"

    return portlet


