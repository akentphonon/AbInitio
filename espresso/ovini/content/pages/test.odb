def page(app):
    import os
    import ovini.content
    from opal.content.Literal import Literal

    # create the page
    page = ovini.content.page(name='greet', title="ovini: Opal VNF Mini", root=app.home)

    # build the body
    body = page.body()
    body.pageHeader()
    body.pageContent()
    body.pageCredits()

    return page

